<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:shrinkColumns="*"
    android:stretchColumns="*">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:id="@+id/Row1"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Correct"
            android:id="@+id/correctStatusTV"
            android:maxLines="2"
            android:textSize="@dimen/labels_text_size"
            android:textColor="#010101" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Timer"
            android:id="@+id/timerStatusTV"
            android:maxLines="2"
            android:textSize="@dimen/labels_text_size"
            android:textColor="#010101" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Wrong"
            android:id="@+id/wrongStatusTV"
            android:maxLines="2"
            android:textSize="@dimen/labels_text_size"
            android:textColor="#010101" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.72"
        android:id="@+id/Row2"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="3"
            android:id="@+id/questionTV"
            android:textSize="@dimen/questions_text_size"
            android:textColor="#010101" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:id="@+id/Row3"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:layout_span="3"
            android:text="A"
            android:id="@+id/A"
            android:textSize="@dimen/options_text_size" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:id="@+id/Row4"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:layout_span="3"
            android:text="B"
            android:id="@+id/B"
            android:textSize="@dimen/options_text_size" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:id="@+id/Row5"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:layout_span="3"
            android:text="C"
            android:id="@+id/C"
            android:textSize="@dimen/options_text_size" />
    </TableRow>

</TableLayout>